-- @testpoint: set方法设置参数default_transaction_deferrable值为on
--查看默认
show default_transaction_deferrable;
+--------------------------------+
| default_transaction_deferrable |
+--------------------------------+
| off                            |
+--------------------------------+
--设置
set default_transaction_deferrable to on;
SQL SUCCESS
--查看
show default_transaction_deferrable;
+--------------------------------+
| default_transaction_deferrable |
+--------------------------------+
| on                             |
+--------------------------------+
--恢复默认
set default_transaction_deferrable to off;
SQL SUCCESS
show default_transaction_deferrable;
+--------------------------------+
| default_transaction_deferrable |
+--------------------------------+
| off                            |
+--------------------------------+
