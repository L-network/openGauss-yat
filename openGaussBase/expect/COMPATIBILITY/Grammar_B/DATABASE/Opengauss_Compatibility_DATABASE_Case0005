-- @testpoint:删除当前模式，显示数据库
-- 创建模式
create schema sch_Opengauss_DATABASE_Case0005_1;
SQL SUCCESS
create schema sch_Opengauss_DATABASE_Case0005_2;
SQL SUCCESS
-- 选择使用存在的数据库
use sch_Opengauss_DATABASE_Case0005_1;
SQL SUCCESS
-- 删除当前使用数据库
drop schema sch_Opengauss_DATABASE_Case0005_1;
SQL SUCCESS
-- 显示当前使用的数据库
select database();
+----------+
| database |
+----------+
|          |
+----------+
