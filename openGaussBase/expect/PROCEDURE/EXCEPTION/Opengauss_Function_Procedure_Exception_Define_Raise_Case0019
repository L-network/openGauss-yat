DECLARE
   v_empno emp.empno%TYPE;
   v_hiredate emp.hiredate%TYPE;
   v_ename emp.ename%TYPE;
   no_result  EXCEPTION;
BEGIN
  select hiredate,ename into v_hiredate,v_ename from emp where v_empno=7788;
   IF v_empno<>7369 THEN
      RAISE no_result;
      else 
       raise info ':%',v_ename,v_hiredate;
   END IF;
EXCEPTION
   WHEN no_result THEN                
      raise info '7369号员工的入职时间信息查询失败了!';
   WHEN OTHERS THEN
      raise info '---:%',SQLERRM;
END;
/
SQL SUCCESS
drop table EMP;
SQL SUCCESS
