-- @testpoint: 类型转换函数numtoday(numeric)，数字类型的值转换为指定格式的时间戳。
select numtoday(20);
+-------------------------------------------------+
| numtoday                                        |
+-------------------------------------------------+
| 0 years 0 mons 20 days 0 hours 0 mins 0.00 secs |
+-------------------------------------------------+
select numtoday('98');
+-------------------------------------------------+
| numtoday                                        |
+-------------------------------------------------+
| 0 years 0 mons 98 days 0 hours 0 mins 0.00 secs |
+-------------------------------------------------+
select numtoday(2020);
+---------------------------------------------------+
| numtoday                                          |
+---------------------------------------------------+
| 0 years 0 mons 2020 days 0 hours 0 mins 0.00 secs |
+---------------------------------------------------+
select numtoday('2020'::nchar);
+------------------------------------------------+
| numtoday                                       |
+------------------------------------------------+
| 0 years 0 mons 2 days 0 hours 0 mins 0.00 secs |
+------------------------------------------------+
select numtoday('2020'::varchar);
+---------------------------------------------------+
| numtoday                                          |
+---------------------------------------------------+
| 0 years 0 mons 2020 days 0 hours 0 mins 0.00 secs |
+---------------------------------------------------+
select numtoday('123456.12354');
+--------------------------------------------------------+
| numtoday                                               |
+--------------------------------------------------------+
| 0 years 0 mons 123456 days 2 hours 57 mins 53.856 secs |
+--------------------------------------------------------+
select numtoday(1234567890.12354);
+------------------------------------------------------------+
| numtoday                                                   |
+------------------------------------------------------------+
| 0 years 0 mons 1234567890 days 2 hours 57 mins 53.856 secs |
+------------------------------------------------------------+
select numtoday('20.2'::numeric(9,3));
+--------------------------------------------------+
| numtoday                                         |
+--------------------------------------------------+
| 0 years 0 mons 20 days 4 hours 48 mins 0.00 secs |
+--------------------------------------------------+
