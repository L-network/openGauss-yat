-- @testpoint: rpad函数有效值测试
select rpad('34576ewefgg5689708-90897865432fggfdfg37890-=6-09876fgdfg30-0897865432',89,'sda') from sys_dummy;
+-------------------------------------------------------------------------------------------+
| rpad                                                                                      |
+-------------------------------------------------------------------------------------------+
| 34576ewefgg5689708-90897865432fggfdfg37890-=6-09876fgdfg30-0897865432sdasdasdasdasdasdasd |
+-------------------------------------------------------------------------------------------+
select rpad('ewee',10,323) from sys_dummy;
+------------+
| rpad       |
+------------+
| ewee323323 |
+------------+
