-- @testpoint: exp函数指数为0、1、-1
select exp(0);
+-----+
| exp |
+-----+
| 1.0 |
+-----+
select exp(1);
+-------------------+
| exp               |
+-------------------+
| 2.718281828459045 |
+-------------------+
select exp(-1);
+---------------------+
| exp                 |
+---------------------+
| 0.36787944117144233 |
+---------------------+
