-- @testpoint: 数字操作符@(绝对值)，正负浮点型取绝对值
drop table if exists data_01;
SQL SUCCESS
create table data_01 (clo1 FLOAT(3),clo2 FLOAT4);
SQL SUCCESS
insert into data_01 values (-255.00001, -32767.1234587);
SQL SUCCESS
select * from data_01;
+------------+------------+
| clo1       | clo2       |
+------------+------------+
| -255.00002 | -32767.123 |
+------------+------------+
select @clo1, @clo2 from data_01;
+-----------+-----------+
| ?column?  | ?column?  |
+-----------+-----------+
| 255.00002 | 32767.123 |
+-----------+-----------+
SELECT @12.235648798,  @ -1.2145566333333333333344565633333333333344112222222222222222222245555555555555555556789 AS RESULT;
+--------------+-----------------------------------------------------------------------------------------+
| ?column?     | result                                                                                  |
+--------------+-----------------------------------------------------------------------------------------+
| 12.235648798 | 1.2145566333333333333344565633333333333344112222222222222222222245555555555555555556789 |
+--------------+-----------------------------------------------------------------------------------------+
drop table if exists data_01;
SQL SUCCESS
