-- @testpoint: 数字操作符^(幂),指数为1/-1或者底数为1/-1时计算
SELECT 3 ^ 1 AS RESULT;
+--------+
| result |
+--------+
| 3.0    |
+--------+
SELECT 3 ^ -1 AS RESULT;
+--------------------+
| result             |
+--------------------+
| 0.3333333333333333 |
+--------------------+
SELECT 1 ^ 3 AS RESULT;
+--------+
| result |
+--------+
| 1.0    |
+--------+
SELECT -1 ^ 3 AS RESULT;
+--------+
| result |
+--------+
| -1.0   |
+--------+
