-- @testpoint: 函数regr_slope(Y, X),当输入参数为非int类型时，合理报错
drop table if exists table_test;
SQL SUCCESS
create table table_test(id integer,
name varchar(10),
age integer,
height decimal(5,2),
hobbies text,
tel bigint
);
SQL SUCCESS
SQL SUCCESS
--当入参中有非int类型参数时，合理报错
select regr_slope(id, name)from  table_test where age <20;
?.*ERROR: invalid input syntax for type double precision: "张三".*
select regr_slope(id, hobbies)from  table_test where age <20;
?.*ERROR: invalid input syntax for type double precision: "sings".*
select regr_slope(name, hobbies)from  table_test where age <20;
?.*ERROR: invalid input syntax for type double precision: "张三".*
--当有三个入参时合理报错
select regr_slope(id, tel, height)from  table_test where age <20;
?.*ERROR: function regr_slope\(integer, bigint, numeric\) does not exist.*
  Hint: No function matches the given name and argument types. You might need to add explicit type casts.
?.*Position.*
  Where: referenced column: regr_slope
drop table table_test;
SQL SUCCESS
