-- @testpoint: sign函数有效值测试
select sign(1);
+------+
| sign |
+------+
| 1.0  |
+------+
select sign(0);
+------+
| sign |
+------+
| 0.0  |
+------+
select sign(-1);
+------+
| sign |
+------+
| -1.0 |
+------+
select sign('1');
+------+
| sign |
+------+
| 1.0  |
+------+
select sign('0');
+------+
| sign |
+------+
| 0.0  |
+------+
select sign('-1');
+------+
| sign |
+------+
| -1.0 |
+------+
