-- @testpoint: pg_stat_get_tuples_inserted(oid)函数的异常校验，合理报错
drop table if exists sales;
SQL SUCCESS
--创建表sales
CREATE TABLE sales
(prod_id NUMBER(6),
 time_id DATE
);
SQL SUCCESS
-- 数据插入
INSERT INTO sales VALUES(1, '2019-01-10 00:00:00');
SQL SUCCESS
select pg_stat_get_tuples_inserted() from PG_CLASS a where a.relname = 'sales';
?.*ERROR: function pg_stat_get_tuples_inserted\(\) does not exist
  Hint: No function matches the given name and argument types. You might need to add explicit type casts.
?.*
  Where: referenced column: pg_stat_get_tuples_inserted
select pg_stat_get_tuples_inserted(a.oid,a.oid) from PG_CLASS a where a.relname = 'sales';
?.*ERROR: function pg_stat_get_tuples_inserted\(oid, oid\) does not exist
  Hint: No function matches the given name and argument types. You might need to add explicit type casts.
?.*
  Where: referenced column: pg_stat_get_tuples_inserted
?.*ERROR: OID out of range
  Where: referenced column: pg_stat_get_tuples_inserted
drop table sales cascade;
SQL SUCCESS
