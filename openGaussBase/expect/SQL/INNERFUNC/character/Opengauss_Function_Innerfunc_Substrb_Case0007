-- @testpoint: 入参是数字
DROP TABLE IF EXISTS type_char;
SQL SUCCESS
CREATE TABLE type_char (string1 int);
SQL SUCCESS
insert into type_char values (1234565);
SQL SUCCESS
SELECT substrb(string1,1,3) from type_char;
+---------+
| substrb |
+---------+
| 123     |
+---------+
DROP TABLE IF EXISTS type_char;
SQL SUCCESS
