-- @testpoint: string和substring均为有效值
-- @description: strpos(string, substring),指定的子字符串的位置
select strpos('source', 'rc');
+--------+
| strpos |
+--------+
| 4      |
+--------+
select strpos('hello', 'o');
+--------+
| strpos |
+--------+
| 5      |
+--------+
select strpos('asdfghjkl,zxcvbnm', ',');
+--------+
| strpos |
+--------+
| 10     |
+--------+
select strpos('@#$%^&*()$%', '%');
+--------+
| strpos |
+--------+
| 4      |
+--------+
