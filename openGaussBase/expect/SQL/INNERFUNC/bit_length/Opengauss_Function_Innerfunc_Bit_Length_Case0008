-- @testpoint: 浮点型参数，包含正负数
select bit_length(1.4503);
+------------+
| bit_length |
+------------+
| 48         |
+------------+
select bit_length(0.32001);
+------------+
| bit_length |
+------------+
| 48         |
+------------+
select bit_length(-0.32);
+------------+
| bit_length |
+------------+
| 32         |
+------------+
