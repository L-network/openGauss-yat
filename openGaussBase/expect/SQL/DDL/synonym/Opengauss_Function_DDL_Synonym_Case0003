-- @testpoint: 为不同长度的表名创建同义词
--建表
drop table if EXISTS syn_tab_003 cascade;
SQL SUCCESS
create table syn_tab_003(a int,b varchar);
SQL SUCCESS
--建同义词
drop synonym if exists syn_a;
SQL SUCCESS
create synonym syn_a for syn_tab_003;
SQL SUCCESS
