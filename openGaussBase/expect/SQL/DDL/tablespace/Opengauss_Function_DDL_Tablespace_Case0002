-- @testpoint: 创建表空间，不设置表空间限额
DROP TABLESPACE IF EXISTS ds_location2;
SQL SUCCESS
CREATE TABLESPACE ds_location2 RELATIVE LOCATION 'hdfs_tablespace/hdfs_tablespace_1';
SQL SUCCESS
ALTER TABLESPACE ds_location2 RESIZE MAXSIZE 'UNLIMITED';
SQL SUCCESS
DROP TABLESPACE IF EXISTS ds_location2;
SQL SUCCESS
