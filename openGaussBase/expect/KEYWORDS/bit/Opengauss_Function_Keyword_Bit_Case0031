--  @testpoint:opengauss关键字bit(非保留)，作为字段数据类型(合理报错)
--前置条件
drop table if exists bit_test cascade;
SQL SUCCESS
--关键字不带引号-合理报错
create table bit_test(id int,name bit);
SQL SUCCESS
--关键字带双引号-合理报错
create table bit_test(id int,name "bit");
?.*ERROR: relation "bit_test" already exists.*
--关键字带单引号-合理报错
create table bit_test(id int,name 'bit');
?.*ERROR: syntax error at or near "'bit'".*
?.*Position: .*
--关键字带反引号-合理报错
create table bit_test(id int,name `bit`);
?.*ERROR: syntax error at or near "`".*
?.*Position: .*
