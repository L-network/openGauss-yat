--  @testpoint:openGauss关键字abort(非保留)，同时作为表名和列名带引号，与union结合查询合并两个SELECT 语句查询
--创建表
drop table if exists "abort";
SQL SUCCESS
create table "abort"(
	c_id int, c_int int, c_integer integer, c_bool int, c_boolean int, c_bigint integer,
	c_real real, c_double real,
	c_decimal decimal(38), c_number number(38), c_numeric numeric(38),
	c_char char(50) default null, c_varchar varchar(20), c_varchar2 varchar2(4000),
	c_date date, c_datetime date, c_timestamp timestamp,
	"abort" varchar(100) default 'abort'
)
PARTITION BY RANGE (c_integer)
(
	partition P_max values less than (maxvalue)
);
SQL SUCCESS
--向表中插入数据
insert into "abort"(c_id,"abort") values(1,'hello');
SQL SUCCESS
insert into "abort"(c_id,"abort") values(2,'china');
SQL SUCCESS
insert into "abort"(c_id,"abort") values(3,'gauss');
SQL SUCCESS
---两个select语句合并查询，查询结果显示hello、china、gauss，对括号中的select子句取limit 2
select "abort" from "abort" where "abort"='hello'
union all (select "abort" from "abort" where "abort"!='hello' order by "abort" limit 2);
+-------+
| abort |
+-------+
| hello |
| china |
| gauss |
+-------+
--清理环境
drop table "abort";
SQL SUCCESS
